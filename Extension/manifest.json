{
  "manifest_version": 2,
  "name": "Shopping Helper",
  "version": "2.0",
  "description": "Automatically opens when you visit Amazon.",
  "permissions": ["activeTab", "https://www.amazon.in/*","nativeMessaging"],
  "background": {
    "service_worker": "background.js"
   
  },
  "browser_action": {
    "default_popup": "shopping.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
  // "content_scripts": [
